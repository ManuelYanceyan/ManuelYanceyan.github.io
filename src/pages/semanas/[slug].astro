---
import siteConfig from '../../data/site-config.ts';

// Define getStaticPaths to provide slugs for each week dynamically
export async function getStaticPaths() {
  return siteConfig.weeks.map((week) => ({
    params: { slug: week.title.toLowerCase().replace(/\s+/g, '-') } // Crea un slug para cada semana
  }));
}

// Obtener los datos de la semana correspondiente
const { slug } = Astro.params;
const week = siteConfig.weeks.find(week => week.title.toLowerCase().replace(/\s+/g, '-') === slug);
---

<html>
  <head>
    <title>{week?.title}</title>
  </head>
  <body>
    <h1>{week?.title}</h1>
    <p>{week?.summary}</p>
    
    <h2>Conceptos Clave</h2>
    <ul>
      {week?.keyConcepts.map(concept => <li>{concept}</li>)}
    </ul>

    <h2>Laboratorio</h2>
    <p>{week?.lab}</p>
  </body>
</html>
