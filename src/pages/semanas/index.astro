---
import { siteConfig } from '../../data/site-config';
---

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-center">Reportes Semanales</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {siteConfig.weeks.map((week, index) => (
            <div 
                key={index}
                class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow"
            >
                <h2 class="text-xl font-semibold text-blue-700 mb-2">{week.title}</h2>
                <p class="text-gray-700 mb-3">{week.summary}</p>
                <h3 class="font-medium text-gray-800 mb-2">Conceptos Clave:</h3>
                <ul class="list-disc list-inside mb-3 space-y-1 text-sm text-gray-600">
                    {week.keyConcepts.map((concept, i) => (
                        <li key={i}>{concept}</li>
                    ))}
                </ul>
                <h3 class="font-medium text-gray-800 mb-2">Laboratorio:</h3>
                <p class="text-sm text-gray-600">{week.lab}</p>
            </div>
        ))}
    </div>
</div>