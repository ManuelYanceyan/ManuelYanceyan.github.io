---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteConfig from '../data/site-config';

const title = "Reportes Semanales";
---

<BaseLayout title={title}>
  <h1 class="text-center text-3xl font-bold mb-6 text-cyan-400">Reportes Semanales</h1>
  
  <div id="semanas" class="space-y-6">
    {siteConfig.weeks.map((week, index) => (
      <div class="semana-card bg-[#0a0a1a] border border-cyan-500 p-6 rounded-lg shadow-lg hover:shadow-cyan-500/40 transition-all duration-300">
        <h2 class="text-xl font-semibold text-cyan-300 mb-2">{week.title}</h2>
        <p class="text-gray-300 mb-4">{week.summary}</p>
        <h3 class="text-cyan-400">Conceptos Clave:</h3>
        <ul class="list-disc list-inside text-gray-200 mb-4">
          {week.keyConcepts.map((concept) => (
            <li>{concept}</li>
          ))}
        </ul>
        <h3 class="text-cyan-400">Laboratorio:</h3>
        <p class="text-gray-200 font-medium">{week.lab}</p>
      </div>
    ))}
  </div>
</BaseLayout>
