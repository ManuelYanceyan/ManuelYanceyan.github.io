---
import Layout from "../layouts/BaseLayout.astro";
---

<style>
  /* Fondo con animaciÃ³n neÃ³n */
  body {
    background: radial-gradient(circle at center, #050505 0%, #000010 100%);
    color: #e0e0ff;
    font-family: 'Orbitron', sans-serif;
    min-height: 100vh;
    overflow: hidden;
    position: relative;
  }

  /* AnimaciÃ³n de borde de luces */
  .neon-border {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    border: 3px solid transparent;
    border-radius: 10px;
    animation: neonPulse 4s linear infinite;
    pointer-events: none; /* ðŸ”¥ evita bloquear los clics */
    z-index: 1;
  }

  @keyframes neonPulse {
    0% { box-shadow: 0 0 10px #00ffff, inset 0 0 10px #00ffff; }
    25% { box-shadow: 0 0 25px #00ff99, inset 0 0 25px #00ff99; }
    50% { box-shadow: 0 0 25px #ff00ff, inset 0 0 25px #ff00ff; }
    75% { box-shadow: 0 0 25px #ff0099, inset 0 0 25px #ff0099; }
    100% { box-shadow: 0 0 10px #00ffff, inset 0 0 10px #00ffff; }
  }

  /* Contenedor principal */
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 90vh; /* un poco mÃ¡s corto para subir todo */
    text-align: center;
    z-index: 2;
    position: relative;
    padding: 0 20px;
    transform: translateY(-20%); /* ðŸ”¥ sube el contenido sin bloquear el menÃº */
  }

  nav {
    position: relative;
    z-index: 10; /* asegura que el menÃº estÃ© encima */
  }

  h1 {
    font-size: 2.5rem;
    text-shadow: 0 0 10px #00ffff;
    margin-bottom: 20px;
  }

  p {
    color: #b3b3ff;
    font-size: 1.2rem;
    max-width: 600px;
    margin-bottom: 40px;
  }

  /* FOTO CON EFECTO NEÃ“N */
  .photo-frame {
    position: relative;
    width: 180px;
    height: 180px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 30px;
    animation: pulse 4s infinite alternate;
  }

  .photo-frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  @keyframes pulse {
    0% { box-shadow: 0 0 15px #00ffff, 0 0 30px #00ffff; }
    50% { box-shadow: 0 0 30px #ff00ff, 0 0 60px #ff00ff; }
    100% { box-shadow: 0 0 20px #00ff99, 0 0 40px #00ff99; }
  }

  .btn-neon {
    background: transparent;
    border: 2px solid #00ffff;
    color: #00ffff;
    padding: 12px 28px;
    border-radius: 10px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    font-weight: bold;
    font-size: 1rem;
    box-shadow: 0 0 10px #00ffff;
  }

  .btn-neon:hover {
    background: #00ffff;
    color: #000;
    box-shadow: 0 0 30px #00ffff, 0 0 60px #00ffff;
  }

  .card {
    background: rgba(20, 20, 40, 0.8);
    border: 1px solid #00ffff33;
    border-radius: 15px;
    padding: 25px;
    margin-top: 30px;
    width: 80%;
    max-width: 800px;
    box-shadow: 0 0 20px #00ffff33;
    transition: all 0.3s ease;
  }

  .card:hover {
    box-shadow: 0 0 30px #00ffff99, 0 0 60px #00ffff55;
    transform: scale(1.02);
  }
</style>

<Layout>
  <div class="neon-border"></div>

  <div class="container">
    <!-- FOTO PERSONAL -->
    <div class="photo-frame">
      <img src="/mi-foto.jpg" alt="Foto de Manuel Yanceyan">
    </div>

    <h1>Bienvenido a mi Portafolio</h1>
    <p>Este es mi espacio digital de aprendizaje en desarrollo web ðŸ”¥</p>

    <a href="/semanas" class="btn-neon">Ver Semanas</a>

    <div class="card">
      <h2>ðŸ’» Proyectos Destacados</h2>
      <p>Explora mis creaciones, laboratorios y reportes de aprendizaje.</p>
      <a href="/projects" class="btn-neon">Ver Proyectos</a>
    </div>
  </div>
</Layout>
